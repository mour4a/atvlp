programa {
  funcao inicio() {
    inteiro numero,soma,i
    escreva("digite um numero:")
    leia(numero)

    soma=0

    para(i=1; 1<numero; i++){
      se (numero % i == 0){
        soma=soma+i
      }
    }
    se (soma == numero){
      escreva(numero, "e um numero perfeito \n")
    } senao{
      escreva(numero, "nao e um numero perfeito \n")
    }
  }

  }

